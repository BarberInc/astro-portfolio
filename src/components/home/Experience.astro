const { details } = Astro.props;
---

<section
    class="flex items-start justify-between dark:text-light text-dark mt-24"
>
    <h2 class="w-[15rem] text-xl font-semibold">EXPERIENCE</h2>
    <div class="w-full">
        {
            details.map((item) => (
                <div>
                    <div class="flex justify-between items-start">
                        <h3 class="text-xl font-semibold">
                            {item.companyName}
                        </h3>
                        <p class="text-sm">
                            {item.startDate} - {item.endDate}
                        </p>
                    </div>
                    <p class="text-sm mt-3">{item.location}</p>
                    <ul class="mt-6">
                        {item.jobResponsibilities.map((item) => (
                            <li>{item}</li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>
